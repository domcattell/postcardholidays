<% include ./partials/header %>

<div class="search-header">
    <% if(deals.length < 1) { %>
    <p>no deals were found for <%= search %>, please try again.</p>
    <% } else { %>
    <h3>Search results for "<%= search %>"</h3>
</div>

<div class="deals-container">
    <% deals.forEach((deal) => { %>
    <div class="featured-deal">
        <a class="" href="/deals/holiday/<%=deal._id%>">
            <div class="postcard-container">
                <div class="postcard">
                    <div class="front">
                        <img class="img-fluid bg" src="<%=deal.image%>" alt="">
                        <h1 class="location"><%= deal.location %></h1>
                        <h3 class="price">Â£<%= deal. price%></h3>
                        <h3 class="date">Posted <%= deal.created.toDateString()%></h3>
                    </div>

                    <div class="back">
                        <h1 class="location-back"><%= deal.location %></h1>
                        <h3 class="desc"><%= deal.desc %></h3>
                        <h3 class="nights">Nights: <%= deal.nights %></h3>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <% }) %>
</div>
<% } %>

<% include ./partials/footer %>